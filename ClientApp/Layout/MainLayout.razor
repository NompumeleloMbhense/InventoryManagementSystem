@using ClientApp.Services
@using ClientApp.Services.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inherits LayoutComponentBase
@inject AuthTokenService TokenService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-semibold" href="/">Product & Supplier Manager</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <AuthorizeView>

                        <NotAuthorized>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/login">Login</NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link" href="/register">Register</NavLink>
                            </li>
                        </NotAuthorized>

                        <Authorized>
                            
                            <li class="nav-item">
                                <span class="nav-link text-white fw-semibold">
                                    Welcome, @GetUserName(@context.User)
                                </span>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link" href="/">Home</NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link" href="/products">Products</NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link" href="/suppliers">Suppliers</NavLink>
                            </li>

                            <li class="nav-item">
                                <button class="btn btn-link nav-link" @onclick="Logout">Logout</button>
                            </li>
                            
                        </Authorized>

                    </AuthorizeView>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="flex-grow-1 container my-5">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <p class="mb-0">
            © @DateTime.Now.Year - Product & Supplier Manager | Built with Blazor
        </p>
    </footer>
</div>

@code
{
    private string? GetUserName(ClaimsPrincipal user)
    {
        return user.FindFirst("fullName")?.Value
           ?? user.FindFirst(ClaimTypes.Name)?.Value
           ?? "User";
    }

    private async Task Logout()
    {
        if (AuthStateProvider is JwtAuthenticationStateProvider jwtProvider)
        {
            await jwtProvider.MarkUserAsLoggedOut();
        }

        Navigation.NavigateTo("/login", replace: true);
    }
}