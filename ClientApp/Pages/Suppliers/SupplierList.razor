@page "/suppliers"
@using ClientApp.Models
@using ClientApp.Services
@inject SupplierService SupplierService
@inject AuthTokenService TokenService
@inject NavigationManager Navigation
@inject Microsoft.JSInterop.IJSRuntime JSRuntime


<h3 class="text-2xl font-bold mb-4">Suppliers</h3>

@if (suppliers is null)
{
    <p><em>Loading...</em></p>
}
else if (!suppliers.Data.Any())
{
    <p>No suppliers found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in suppliers.Data)
            {
                <tr>
                    <td>
                        <a href="@($"/suppliers/{s.SupplierId}")" class="text-decoration-none">
                            @s.Name
                        </a>
                    </td>
                    <td>@s.Location</td>
                    <td>@s.Email</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="() => EditSupplier(s.SupplierId)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteSupplier(s.SupplierId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3 d-flex justify-content-between align-items-center">
        <button class="btn btn-primary" @onclick="PrevPage" disabled="@(!CanPrev)">Previous</button>
        <span>Page @pageNumber of @suppliers.TotalPages</span>
        <button class="btn btn-primary" @onclick="NextPage" disabled="@(!CanNext)">Next</button>
    </div>

    <button class="btn btn-primary mt-3" @onclick="Logout">Logout</button>
}



@code
{
    private PagedResponse<SupplierReadDto>? suppliers;
    private int pageNumber = 1;
    private int pageSize = 5;

    private bool CanPrev => pageNumber > 1;
    private bool CanNext => suppliers is not null && pageNumber < suppliers.TotalPages;

    protected override async Task OnInitializedAsync()
    {
        // Check if user is logged in
        var token = await TokenService.GetTokenAsync();
        if (string.IsNullOrEmpty(token))
        {
            Navigation.NavigateTo("/login", forceLoad: true);
            return;
        }

        // Extract ?page=x from URL
        var uri = new Uri(Navigation.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("page", out var pageValue) && int.TryParse(pageValue, out var parsedPage))
        {
            pageNumber = parsedPage;
        }

        await LoadSuppliersAsync();
    }

    private async Task LoadSuppliersAsync()
    {
        suppliers = await SupplierService.GetPaginatedAsync(pageNumber, pageSize);

        // Keep the ?page query updated in the URL
        var uri = Navigation.GetUriWithQueryParameter("page", pageNumber);
        Navigation.NavigateTo(uri, forceLoad: false);
    }

    private async Task NextPage()
    {
        if (CanNext)
        {
            pageNumber++;
            await LoadSuppliersAsync();
        }
    }

    private async Task PrevPage()
    {
        if (CanPrev)
        {
            pageNumber--;
            await LoadSuppliersAsync();
        }
    }
    private void EditSupplier(int id) => Navigation.NavigateTo($"/suppliers/edit/{id}");

    private async Task DeleteSupplier(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this supplier?");

        if (confirmed)
        {
            // Call the service to delete the supplier
            var success = await SupplierService.DeleteAsync(id);

            // Reload the suppliers list if deletion was successfull
            if (success)
                await LoadSuppliersAsync();
        }
    }

    private async Task Logout()
    {
        await TokenService.RemoveTokenAsync();
        Navigation.NavigateTo("/login");
    }
}